from classes_4 import AddressBook
from pickle import load, dump
from pathlib import Path


def dump_files(file_name: Path, db: dict) -> str:
    if file_name.is_file():
        with open(file_name, 'wb') as fh:
            dump(db, fh)
        return 'saved'
    return 'don`t saved'


def load_files(file_name: Path) -> AddressBook:
    if file_name.is_file():
        with open(file_name, 'rb') as fh:
            classes_4 = load(fh)
        return classes_4
    else:
        return AddressBook()


if __name__ == '__main__':

    current_dir = Path(__file__).parent
    file_db = 'phone_db.bin'
    file_name = current_dir / file_db
    classes_4 = load_files(file_name)

    print(dump_files(file_name, classes_4))
